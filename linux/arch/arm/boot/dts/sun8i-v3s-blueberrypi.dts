/dts-v1/;
#include "sun8i-v3s.dtsi"
#include "sunxi-common-regulators.dtsi"
#include <dt-bindings/input/input.h>
/ {
	model = "Blueberry PI";
	compatible = "blueberrypi", "allwinner,sun8i-v3s";

	aliases {
		serial0 = &uart0;
		ethernet0 = &emac;
		
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};
leds {
	compatible = "gpio-leds";

	act_led {
		label = "act_led:green:usr";
		gpios = <&pio 1 2 GPIO_ACTIVE_HIGH>; /* PB2 */
		linux,default-trigger = "mmc0";
		default-state = "off";
	};
	};
	

};

&spi0 {
	
	pinctrl-0 = <&spi0_pins>;
	pinctrl-names = "default";
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;
			
		mcp2515 {
				reg = <0>;
				compatible = "microchip,mcp2515";
				pinctrl-names = "default";
				pinctrl-0 = <&can0_pin_irq>;
				spi-max-frequency = <10000000>;
				interrupt-parent = <&pio>;
				interrupts = <1 1 2>; /* PB1 IRQ_TYPE_EDGE_FALLING */
				clocks = <&can0_osc>;
				status = "okay";
};
};

&mmc0 {
	pinctrl-0 = <&mmc0_pins>;
	pinctrl-names = "default";
	broken-cd;
	bus-width = <4>;
	vmmc-supply = <&reg_vcc3v3>;
	status = "okay";
};

&mmc1 {
	pinctrl-0 = <&mmc1_pins>;
	pinctrl-names = "default";
	broken-cd;
	bus-width = <4>;
	vmmc-supply = <&reg_vcc3v3>;
	status = "okay";
};


&usb_otg {
	dr_mode = "otg";
	status = "okay";
};

&usbphy {
	usb0_id_det-gpio = <&pio 5 6 GPIO_ACTIVE_HIGH>;
	status = "okay";
};

&ehci0 {
                         
    status = "okay";
};

&ohci0 {
                         
    status = "okay";
};
                 
&emac {
	allwinner,leds-active-high;
	status = "okay";
};

&uart0 {
	pinctrl-0 = <&uart0_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&codec {
	allwinner,audio-routing = "Headphone", "HP", "Headphone", "HPCOM", "MIC1", "Mic", "Mic", "HBIAS";
	status = "okay";
};


&lradc {
	vref-supply = <&reg_vcc3v0>;
	status = "okay";

	button@200 {
		label = "Volume Up";
		linux,code = <KEY_VOLUMEUP>;
		channel = <0>;
		voltage = <200000>;

	};

	button@400 {
		label = "Volume Down";
		linux,code = <KEY_VOLUMEDOWN>;
		channel = <0>;
		voltage = <400000>;
	};

	button@600 {
		label = "Select";
		linux,code = <KEY_SELECT>;
		channel = <0>;
		voltage = <600000>;
	};

	button@800 {
		label = "Start";
		linux,code = <KEY_OK>;
		channel = <0>;
		voltage = <800000>;
	};
};

&pio {
	
	uart0_pins: uart0@0 {
	 	pins = "PB8", "PB9";
		function = "uart0";
	};
	
	can0_pin_irq: can0_pin_irq {
				pins = "PB1";
				function = "irq";
				bias-pull-up;

};

};

